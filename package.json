{
  "name": "@reffy/infinite-canvas",
  "version": "0.0.13",
  "description": "An infinite canvas designed to be a minimal web component, serving as an image reference board.",
  "keywords": [
    "typescript",
    "npm",
    "lit",
    "web-component",
    "infinite-canvas",
    "webgl"
  ],
  "homepage": "https://github.com/trash-lobster/reffy-infinite-canvas",
  "bugs": "https://github.com/trash-lobster/reffy-infinite-canvas/issues",
  "private": false,
  "type": "module",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "author": {
    "name": "Vincent Sit",
    "url": "https://github.com/trash-lobster",
    "email": "vincentsitdata@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trash-lobster/reffy-infinite-canvas.git"
  },
  "files": [
    "esm",
    "lib",
    "README.md",
    "LICENSE.txt",
    "package.json",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./dist": {
      "import": "./dist/index.js"
    },
    "./dist/umd": "./dist/index.umd.js"
  },
  "sideEffects": true,
  "scripts": {
    "dev": "vite dev --config vite.examples.config.js",
    "preview:examples": "vite preview --config vite.examples.config.js",
    "test": "vitest --ui --coverage.enabled=true",
    "coverage": "vitest run --coverage",
    "e2e": "npx playwright test",
    "sortGlossary": "node ./journal/sort.js -f journal/a-glossary.md",
    "build:examples": "vite build --config vite.examples.config.js",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build:main": "vite build",
    "build": "run-p prettier build:*",
    "prettier": "npx prettier . --write",
    "release": "npm publish --access public"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/stats.js": "^0.17.4",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "esbuild": "^0.25.10",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@antv/g-device-api": "^1.6.13",
    "@lit/context": "^1.1.2",
    "@lit/task": "^1.0.1",
    "@loaders.gl/core": "^4.2.2",
    "@loaders.gl/images": "^4.2.2",
    "dexie": "^4.2.1",
    "eventemitter3": "^5.0.1",
    "gl-matrix": "^3.4.4",
    "lit": "^3.3.1",
    "mobx": "^6.15.0",
    "stats.js": "^0.17.0",
    "uuid": "^13.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
