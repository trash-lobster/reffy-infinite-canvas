{
    "name": "infinite-canvas",
    "version": "1.0.0",
    "description": "An infinite canvas",
    "private": true,
    "main": "lib/index.js",
    "module": "esm/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./esm/index.js",
            "require": "./lib/index.js"
        }
    },
    "scripts": {
        "dev": "vite dev",
        "deploy": "vite build",
        "test": "npm run test",
        "sortGlossary": "node ./journal/sort.js -f journal/a-glossary.md",
        "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
        "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
        "build:main": "esbuild public/main.ts --bundle --outfile=dist/index.js --format=iife --global-name=InfiniteCanvas",
        "build": "run-p prettier build:*",
        "prettier": "npx prettier . --write"
    },
    "author": "Vincent Sit",
    "license": "ISC",
    "devDependencies": {
        "@types/d3-color": "^3.1.0",
        "@types/rbush": "^3.0.0",
        "esbuild": "^0.25.10",
        "prettier": "3.6.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.9",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "@antv/g-device-api": "^1.6.13",
        "@lit/context": "^1.1.2",
        "@lit/task": "^1.0.1",
        "@loaders.gl/core": "^4.2.2",
        "@loaders.gl/images": "^4.2.2",
        "@pixi/math": "^7.4.3",
        "bezier-easing": "^2.1.0",
        "d3-color": "^3.1.0",
        "gl-matrix": "^3.4.4",
        "lit": "^3.1.3",
        "eventemitter3": "^5.0.1",
        "rbush": "^3.0.1"
    },
    "publishConfig": {
        "access": "public"
    }
}
